<?publish title ?>Admin Console<?end publish ?>

<section id="servers">
	<header>
		<h1>Servers</h1>
	</header>

	<nav class="actions">
		<button>Add a Server</button>
	</nav>

<?if servers.empty? ?>
	<p>No servers configured.</p>
<?else?>
	<table>
		<thead>
			<tr>
				<th>UUID</th>
				<th>Name</th>
				<th>Default Host</th>
				<th>Address</th>
				<th>Port</th>
				<th>SSL?</th>
			</tr>
		</thead>
		<tbody>
		<?for server in servers ?>
			<tr class="server">
				<td class="uuid">
					<a href="[?call request.app_path ?]/server/[?call server.uuid ?]"><?call server.uuid ?></a>
				</td>
				<td class="name"><?call server.name ?></td>
				<td class="default-host"><?call server.default_host ?></td>
				<td class="bind-addr"><?call server.bind_addr ?></td>
				<td class="port"><?call server.port ?></td>
				<td class="ssl"><?if server.use_ssl.nonzero? ?>â€¢<?end if ?></td>
			</tr>
		<?end for ?>
		</tbody>
	</table>
<?end if ?>
</section>

